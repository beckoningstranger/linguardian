{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "rootDir": "src",
    "noEmit": false,
    "resolveJsonModule": true
  }
}

{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "rootDir": "src",
    "noEmit": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/models/*": ["./src/models/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/data/*": ["./data/*"],
      "@/types/*": ["./src/types/*"],
      "@/middleware/*": [".src/lib/middleware/*"],
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types", "./src/types"]
  }
}

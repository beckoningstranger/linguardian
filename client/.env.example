# NextAuth secrets and config
NEXTAUTH_SECRET= # require("crypto").randomBytes(32).toString("base64"), must match frontend
NEXTAUTH_URL=http://localhost:3000

# Google OAuth credentials
GOOGLE_ID=
GOOGLE_SECRET=

# Backend service
SERVER_URL=http://backend:8000

# Frontend service (self-reference)
FRONTEND_URL=http://frontend:3000

# Disable Next.js telemetry (optional)
NEXT_TELEMETRY_DISABLED=1